<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="garry">
	
	<!-- xacro -->
	<xacro:property name="base_x_len" value="24.5"/>
	<xacro:property name="base_y_len" value="17.0"/>

	<xacro:property name="wheel_x_side" value="9.0"/>
	<xacro:property name="wheel_y_side" value="3.0"/>
	<xacro:property name="wheel_d" value="5.4"/>
	
	<xacro:property name="board_x_back" value="10.0"/>
	<xacro:property name="board_x_len" value="7.0"/>
	<xacro:property name="board_y_len" value="8.0"/>
	<xacro:property name="board_z_len" value="15.0"/>

	<xacro:property name="motor_x_len" value="2.5"/>
	<xacro:property name="motor_y_len" value="3.0"/>

	<xacro:property name="lmotor_x_back" value="10.5"/>
	<xacro:property name="lmotor_y_side" value="9.0"/>
	<xacro:property name="rmotor_x_back" value="7.5"/>
	<xacro:property name="rmotor_y_side" value="9.0"/>

	<xacro:property name="imu_y_offset" value="4.0"/>

	<!-- materials  -->
	<material name="black">
		<color rgba="0 0 0 0"/>
	</material>

	<material name="blue">
		<color rgba="0 0 0.8 1"/>
	</material>

	<!-- links -->
	<link name="base_link">
		<visual>
			<geometry>
	      			<box size="24.5 17.0 1.25"/>
			</geometry>
			<origin xyz="0 0 0"/>
		</visual>
		<collision>
			<geometry>
				<box size="24.5 17.0 1.25"/>
			</geometry>
		</collision>
  	</link>
	<link name="boards_link">
		<visual>
			<geometry>
				<box size="7.0 8.0 15.0"/>
			</geometry>
			<origin xyz="0.0 0.0 7.5625"/>
		</visual>
		<collision>
			<geometry>
				<box size="7.0 8.0 1.5"/>
			</geometry>
		</collision>
	</link>
	
	<joint name="base_to_board" type="fixed">
		<parent link="base_link"/>
		<child link="boards_link"/>
		<origin xyz="-2.25 0.0 0.6125"/>
	</joint>
	
	<link name="right_wheel">
		<visual>
			<origin xyz="-3.25 5.5 -2.3125"/>
			<origin rpy="1.0 1.0 1.0"/>
			<geometry>
				<cylinder length="1.0" radius="2.7"/>
			</geometry>
		</visual>
		<collision>
			<geometry>
				<cylinder length="1.0" radius="2.7"/>
			</geometry>
		</collision>
	</link>

	<joint name="base_to_right_wheel" type="fixed">
		<parent link="base_link"/>
		<child link="right_wheel"/>
		<origin xyz="-3.25.0 5.5 -0.6125"/>
	</joint>	

